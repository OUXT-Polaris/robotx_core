<launch>

  <!-- IP address -->
  <arg name="ai_pilot_ip" default="192.168.1.201"/>
  <arg name="front_ip" default="192.168.1.202"/>
  <!-- Pcap file -->
  <arg name="ai_pilot_pcap" default=""/>
  <arg name="front_pcap" default=""/>
  
  <!-- AI Pilot -->
  <group ns="ai_pilot">
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch">
      <arg name="device_ip" value="$(arg ai_pilot_ip)"/>
      <arg name="frame_id" value="ai_pilot_velodyne"/>
      <arg name="pcap" value="$(arg ai_pilot_pcap)"/>
      <arg name="port" value="2368" />
    </include>
  </group>
  
  <!-- Front -->
  <group ns="front">
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch">
      <arg name="device_ip" value="$(arg front_ip)"/>
      <arg name="frame_id" value="front_velodyne"/>
      <arg name="pcap" value="$(arg front_pcap)"/>
      <arg name="port" value="2369" />
    </include>
  </group>
  
</launch>
